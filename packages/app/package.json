{
  "name": "@ciska/app",
  "version": "1.0.0",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "author": "tett23",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf lib",
    "start": "run-s build:dependencies build start:dev",
    "start:dev": "electron ./lib/cjs/index.js",
    "build": "node build.mjs",
    "build:dependencies": "run-p build:dependencies:*",
    "build:dependencies:message": "yarn workspace @ciska/message build",
    "build:dependencies:menu-frontend": "yarn workspace @ciska/menu-frontend build",
    "watch": "node build.mjs --watch",
    "watch:dependencies": "run-p watch:dependencies:*",
    "watch:dependencies:message": "yarn workspace @ciska/message watch",
    "watch:dependencies:menu-frontend": "yarn workspace @ciska/menu-frontend watch",
    "lint": "run-p lint:ts",
    "lint:ts": "tsc --noEmit",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "ci": "lint",
    "pack": "NODE_ENV=production yarn build && electron-builder --dir --mac --x64",
    "dist": "NODE_ENV=production yarn build && electron-builder --mac --x64"
  },
  "dependencies": {
    "@ciska/message": "1.0.0"
  },
  "devDependencies": {
    "electron": "^18.0.1"
  }
}
