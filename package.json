{
  "name": "ciska",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:tett23/ciska.git",
  "author": "tett23 <tett23@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "run-s clean build:dependencies && run-p watch:dependencies start:electron:dev",
    "start:electron:dev": "yarn workspace @ciska/app start",
    "build:dependencies": "run-p build:dependencies:*",
    "build:dependencies:app": "yarn workspace @ciska/app build",
    "build:dependencies:message": "yarn workspace @ciska/message build",
    "build:dependencies:menu-frontend": "yarn workspace @ciska/menu-frontend build",
    "watch:dependencies": "run-p watch:dependencies:*",
    "watch:dependencies:app": "yarn workspace @ciska/app watch",
    "watch:dependencies:message": "yarn workspace @ciska/message watch",
    "watch:dependencies:menu-frontend": "yarn workspace @ciska/menu-frontend watch",
    "clean": "yarn workspaces run clean"
  },
  "devDependencies": {
    "esbuild": "^0.14.16",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
